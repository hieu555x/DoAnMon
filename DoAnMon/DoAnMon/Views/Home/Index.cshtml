</div> <!-- End promo area -->

<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Latest Products</h2>
                    <div class="product-carousel">
                        @foreach (var item in data.sanPhams.OrderByDescending(a=>a.maSP).Take(6))
                        {
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src=@Url.Content("~/Content/"+item.hinhDD) alt="">
                                    <div class="product-hover">
                                        <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ</a>
                                        <a href=@Url.Action("ChiTiet","Shop",new { id = item.maSP }) class="view-details-link"><i class="fa fa-link"></i> Chi Tiết</a>
                                    </div>
                                </div>

                                <h2><a href=@Url.Action("ChiTiet","Shop",new { id = item.maSP }) >@item.tenSP</a></h2>

                                <div class="product-carousel-price">
                                    <ins>@String.Format("{0:0,0}",item.giaBan) VNĐ</ins> <del></del>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End main content area -->

