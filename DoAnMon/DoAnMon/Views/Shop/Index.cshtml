@using DoAnMon.Models
@using PagedList.Mvc
@model PagedList.PagedList<sanPham>
@{
    ViewBag.Title = "Sản Phẩm";
    var data = new dbBanHangOnlineEntities();
}
<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Sản phẩm</h2>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-md-3 col-sm-6">
                    <div class="single-shop-product">
                        <div class="product-upper">
                            <img src=@Url.Content("~/Content/"+item.hinhDD) alt="">
                        </div>
                        <h2><a href="@Url.Action("ChiTiet","Shop",new { id = item.maSP })">@item.tenSP</a></h2>
                        <div class="product-carousel-price">
                            <ins>@String.Format("{0:0,0}", item.giaBan) VNĐ</ins> <del></del>
                        </div>

                        <div class="product-option-shop">
                            <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="/canvas/shop/?add-to-cart=70">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row">
            Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber) / @Model.PageCount
            
            <div class="col-md-12">
                <div class="product-pagination text-center">
                    <div class="menu">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
                    </div>
                    <style>
                        .menu li {
                            display: inline;
                        }
                    </style>
                </div>
            </div>
        </div>
    </div>
</div>